@model NiagaraCollegeProject.Models.MeetingDocuments

@{
    ViewData["Title"] = "Delete";
}

<h1>Confirm Archive</h1>

<h3>Are you sure you want to Archive @Model.FileName?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meeting.MeetingTopicName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>
        <dt class="col-sm-2">
            Uploaded Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UploadedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MimeType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MimeType)
        </dd>
    </dl>

    <form asp-action="Archive">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Confirm" class="btn btn-danger" />
        <a asp-controller="MeetingDocuments" asp-action="Index" class="Back_btns">Cancel</a>
    </form>
</div>
