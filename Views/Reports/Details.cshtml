@model NiagaraCollegeProject.Models.Report

<h1>Details</h1>

<style>
    .Btn_Edit {
        background-color: #5AC9DA;
        color: darkslategrey;
        font-weight: bold;
        border: #426F76;
        border-radius: 6px;
        padding: 8px 12px;
        text-decoration: none;
        margin: 10px 5px;
    }

        .Btn_Edit:hover {
            background-color: lightgreen
        }
</style>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UploadedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UploadedOn)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
    {
        <a asp-action="Edit" class="Btn_Edit" asp-route-id="@Model?.ID">Edit </a>
    }
    <a asp-action="Index" class="Back_btns"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
</div>
