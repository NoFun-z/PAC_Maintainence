@model NiagaraCollegeProject.Models.MeetingDocuments

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Confirm</h1>

<h3>Are you sure you want to delete @Model.FileName?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting.MeetingTopicName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MimeType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UploadedDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href='@ViewData["returnURL"]' class="Back_btns"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
    </form>
</div>
