@model NiagaraCollegeProject.Models.Meeting

@{
    ViewData["Title"] = "Delete";
}

<h1>Confirm Archive</h1>

<h3>Are you sure you want to Archive @Model.MeetingTopicName?</h3>
<div>
    <h4>Meetings</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingTopicName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingTopicName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingStartTimeDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingStartTimeDate)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingNotes)
        </dd>
    </dl>

    <form asp-action="Archive">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Confirm" class="btn btn-danger" />
        <a asp-controller="Meetings" asp-action="Index" class="Back_btns">Cancel</a>
    </form>
</div>
