@model IEnumerable<NiagaraCollegeProject.Models.PAC>

<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#success-message").fadeOut("slow");
        }, 4500); //Change the duration (in milliseconds) to whatever you prefer
    });
</script>


<h1>PACs</h1>
<br />
<p>
    <a asp-action="Create" class="btn_Create" data-toggle="tooltip" title="Create a new PAC">NEW PAC</a>
</p>
<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <br />
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div id="success-message" class="alert alert-success" style="margin-left: 0">
            <strong>SUCCESS !</strong> @ViewBag.SuccessMessage
        </div>
    }
    <div class="container-fluid d-block d-lg-none">
        <div class="row">
            @foreach (var item in Model)
            {
                //Make a card for each one
                <div class="card mb-sm-3" style="min-width: 18rem;">
                    <h5 class="card-header"><strong>@Html.DisplayFor(modelItem => item.PACName)</strong></h5>
                    <div class="card-body">
                        <figure class="row">
                            <figcaption class="col">
                                <p class="card-text">
                                    @*Card Text goes Here*@
                                <p class="card-text">
                                        @*Card Text goes Here*@
                                    <dl class="row lh-1">
                                        <dt class="col-3 text-truncate">
                                            School Of
                                        </dt>
                                        <dd class="col-9">
                                                @Html.DisplayFor(modelItem => item.AcademicDivision.DivisionName)
                                        </dd>
                                    </dl>
                                </p>
                                </p>
                            </figcaption>
                        </figure>
                        <div class="card-footer">
                            <a asp-action="Edit" class="Acc_Edit" asp-route-id="@item.ID"><i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
    <div class="d-none d-lg-block">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <input type="submit" name="actionButton" value="PAC ↕" class="btn" style="color: white; font-weight: bold; margin-bottom: 0; padding-bottom: 0;" />
                    </th>
                    <th>
                        <input type="submit" disabled value="SCHOOL OF" class="btn" style="color: white; font-weight: bold; margin-bottom: 0; padding-bottom: 0; cursor:pointer;opacity: 1;" />
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PACName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AcademicDivision.DivisionName)
                        </td>
                        <td>
                            <a asp-action="Edit" class="Acc_Edit" asp-route-id="@item.ID" data-toggle="tooltip" title="Edit a PAC"><i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <partial name="_PagingNavBar" />
</form>
