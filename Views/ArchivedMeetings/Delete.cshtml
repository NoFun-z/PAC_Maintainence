@model NiagaraCollegeProject.Models.Meeting

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Confirm</h1>

<h3>Are you sure you want to delete @Model.MeetingTopicName?</h3>
<div>
    <h4>Meeting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingStartTimeDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingStartTimeDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingNotes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingNotes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PAC)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PAC.PACName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href='@ViewData["returnURL"]' class="Back_btns"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
    </form>
</div>
