@model NiagaraCollegeProject.Models.AgendaItem

@{
    ViewData["Title"] = "Create";
}

<h1>Create new Agenda Item</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AgendaName" class="control-label"></label>
                <input asp-for="AgendaName" class="form-control" />
                <span asp-validation-for="AgendaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Upload Date</label>
                <input asp-for="UploadDate" class="form-control" />
                <span asp-validation-for="UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Member</label>
                <select asp-for="MemberID" id="MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Meeting</label>
                <select asp-for="MeetingID" id="MeetingID"  class="form-control" asp-items="ViewBag.MeetingID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
                <link rel="stylesheet" href="~/css/SearchableDDL.css" />
                <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
                <script type="text/jscript">
                $(function ()
                {
                    $("#MemberID").select2();
                    $("#MeetingID").select2();
                });
            </script>
}