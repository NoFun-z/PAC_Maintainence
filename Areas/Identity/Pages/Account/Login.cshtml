
@page
@model LoginModel
<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Log In";
}
<style>
    ul {
        padding-left: 0rem;
    }
</style>
<div class="login">
        <div class="login-screen">
            <div class="app-title">
                <h1>@ViewData["Title"]</h1>
            </div>

            <form class="login-form" id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="control-group">
                    <label asp-for="Input.Email" class="login-field-icon fui-user"></label>
                    <input asp-for="Input.Email" class="login-field" autocomplete="username" aria-required="true" />                  
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="control-group">
                    <label asp-for="Input.Password" class="login-field-icon fui-lock"></label>
                    <input asp-for="Input.Password" class="login-field" autocomplete="current-password" aria-required="true" />                  
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="btn btn-primary btn-large btn-block">Log In</button>
                </div>
                <div>
                    <p>
                        <a class="login-link" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    @*                    <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>

            </form>
        </div>
    </div>

